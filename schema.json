{
    "options": {
        "fields": {
            "title": {
                "label": "Title",
                "description": "Title for this module.",
                "default": "News",
                "group": "General",
                "heading": "",
                "type": "String"
            },
            "no-result-message": {
                "label": "No-Result Message",
                "description": "Message shown if articles are not available or if the category filter returns no results.",
                "default": "No articles found",
                "group": "General",
                "heading": "",
                "type": "String"
            },
            "background-color": {
                "label": "Background Color",
                "description": "Color for background",
                "default": "#ffffff",
                "group": "General",
                "heading": "Styles",
                "type": "Color"
            },
            "layout": {
                "label": "Layout",
                "description": "The layout used to display the articles.",
                "default": "tiled-images",
                "values": [
                    { "key": "tiled-images", "name": "Tiled images" }, 
                    { "key": "simple-no-images", "name": "Simple with no images" },
                    { "key": "custom", "name": "Custom" }
                ],
                "group": "General",
                "heading": "Styles",
                "type": "Dropdown"
            },
            "enable-ui-override": {
                "label": "Enable UI Override",
                "description": "Override the default UI for this module",
                "group": "Advanced",
                "heading": "",
                "type": "YesNo"
            },
            "enable-xml-editing": {
                "label": "Enable XML Editing",
                "description": "Show XML to allow advanced editing",
                "group": "Advanced",
                "heading": "",
                "type": "YesNo"
            }
        },
        "groups": [ "General", "Advanced" ]
    },
    "data": {
        "articles": {
            "child": "article",
            "name": "Article",
            "thumb": "image",
            "title": "title",
            "description": "summary",
            "tag":  "category",
            "extra": "author",
            "fields": [
                {
                    "key": "title",
                    "type": "string",
                    "format": "single-line",
                    "caption": "Title",
                    "minLength": 2,
                    "maxLength": 200,
                    "required": true
                },
                {
                    "key": "category",
                    "type": "select",
                    "bind": "categories",
                    "caption": "Category",
                    "required": true
                },
                {
                    "key": "author",
                    "type": "select",
                    "bind": "authors",
                    "caption": "Author",
                    "required": true
                },
                {
                    "key": "summary",
                    "type": "string",
                    "format": "multi-line",
                    "caption": "Summary",
                    "required": true
                },
                {
                    "key": "published",
                    "type": "datetime",
                    "caption": "Published",
                    "required": true
                },
                {
                    "key": "link",
                    "type": "string",
                    "format": "uri",
                    "caption": "Article URL",
                    "pattern": "^(https?|tel|sms|mail|itms)://[-A-Za-z0-9+&@#/%?=~_|!:,.;]*[-A-Za-z0-9+&@#/%=~_|]$",
                    "required": false,
                    "placeholder": "http://some.server.com"
                },
                {
                    "key": "image",
                    "type": "fileref",
                    "format": "jpg, png, jpeg",
                    "caption": "Image",
                    "required": true
                },
                {
                    "key": "content",
                    "type": "content",
                    "format": "rtf",
                    "caption": "Body",
                    "required": true
                }
            ]
        },
        "categories": {
            "child": "category",
            "name": "Category",
            "title": "name",
            "key": "id",
            "fields": [
                {
                    "key": "name",
                    "type": "string",
                    "format": "single-line",
                    "caption": "Name",
                    "minLength": 2,
                    "maxLength": 200,
                    "required": true
                },
                {
                    "key": "id",
                    "type": "id"
                }
            ]
        },
        "authors": {
            "child": "author",
            "name": "Authors",
            "title": "name",
            "thumb": "avatar",
            "description": "bio",
            "key": "id",
            "fields": [
                {
                    "key": "id",
                    "type": "id"
                },
                {
                    "key": "name",
                    "type": "string",
                    "format": "single-line",
                    "caption": "Name",
                    "minLength": 3,
                    "maxLength": 50,
                    "required": true
                },
                {
                    "key": "bio",
                    "type": "string",
                    "format": "multi-line",
                    "caption": "Bio",
                    "required": false
                },
                {
                    "key": "avatar",
                    "type": "fileref",
                    "format": "jpg, png, jpeg",
                    "caption": "Avatar",
                    "required": true
                }
            ]
        }
    }
}
